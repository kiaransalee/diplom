{% extends "base.html.twig" %}

{% block main %}

    <form action="{{ url('/login') }}" method="post">
        <div>
            <label>Логин</label>
            <input type="text" name="login" value="{{ login }}" required autofocus>
        </div>

        <div>
            <label>Пароль</label>
            <input type="password" name="password" required>
        </div>

        <div>
            <button type="submit">Войти</button>
        </div>
    </form>

{% endblock %}